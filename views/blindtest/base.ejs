<div style="height: 80vh" class="px-6 mx-auto lg:px-16 h-auto">
	<div class="mt-32 mb-16 text-center mx-auto px-4">
		<h1 class="font-semibold text-5xl text-gray-700">
			Hello <span class="text-orange-600 font-bold underline" contenteditable="true" id="username_input"><%= game.username %></span>
		</h1>
		<p class="mt-2 text-md text-gray-600">You can edit your username by clicking above.</p>
	</div>

	<form action="" method="post">
		<div class="mx-auto mt-32 max-w-lg">
			<div class="py-2">
				<label for="room_ref" class="px-1 text-sm text-gray-700">Enter a room code to play !</label>
				<div class="relative mt-2">
					<input type="text" name="room_ref" placeholder="091792" required id="room_ref" class="appearance-none block w-full bg-grey-lighter text-grey-darker border border-red rounded py-2 px-3 focus:border-gray-600">
					<button type="submit" class="absolute right-0 top-0 mt-3 mr-4">
						<svg aria-hidden="true" focusable="false" data-prefix="fas" data-icon="play" class="h-4 w-4 fill-current" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path fill="currentColor" d="M424.4 214.7L72.4 6.6C43.8-10.3 0 6.1 0 47.9V464c0 37.5 40.7 60.1 72.4 41.3l352-208c31.4-18.5 31.5-64.1 0-82.6z"></path></svg>
					</button>
				</div>
			</div>
		</div>
	</form>
</div>
