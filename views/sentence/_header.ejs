<script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.js" defer></script>

<nav x-data="{ open: false }" @keydown.window.escape="open = false" class="border-b border-gray-200">
	<div class="px-6 mx-auto lg:px-16">
		<div class="flex items-center justify-between h-16">
			<div class="flex items-center">
				<h1 class="text-gray-800 text-lg font-bold tracking-widest uppercase"><a href="<%= BASE_URL %>">Sooneos</a></h1>
				<h2 class="text-indigo-600 text-xs font-bold uppercase ml-2"><a href="<%= BASE_URL %>sentence">Sentence</a></h2>
			</div>
			<div class="hidden lg:block">
				<div class="flex items-center ml-4 md:ml-6">
					<% if(logged == false) { %>
						<a href="<%= BASE_URL %>auth" class="ml-4 flex flex-row font-medium text-gray-800 hover:text-gray-700">Login</a>
					<% } else { %>
						<div @click.away="open = false" class="relative ml-3" x-data="{ open: false }">
							<div>
								<button @click="open = !open" class="flex items-center max-w-xs text-sm text-white rounded-full focus:outline-none focus:shadow-solid" id="user-menu" aria-label="User menu" aria-haspopup="true" x-bind:aria-expanded="open">
									<p class="text-gray-700 mr-2 font-semibold"><%= user_data.display_name %></p>
									<img class="w-8 h-8 rounded-full" src="<%= (user_data.images) ? user_data.images[0].url : 'https://748073e22e8db794416a-cc51ef6b37841580002827d4d94d19b6.ssl.cf3.rackcdn.com/not-found.png' %>" alt="Spotify profil pic" />
								</button>
							</div>
							<div x-show="open" x-transition:enter="transition ease-out duration-100" x-transition:enter-start="transform opaity-0 scale-95" x-transition:enter-end="transform opacity-100 scale-100" x-transition:leave="transition ease-in duration-75" x-transition:leave-start="transform opacity-100 scale-100" x-transition:leave-end="transform opacity-0 scale-95" class="absolute right-0 w-48 mt-2 origin-top-right rounded-md shadow-lg">
								<div class="py-1 bg-white rounded-md shadow-xs">
									<a href="<%= BASE_URL %>lyrics" class="flex flex-row items-center px-4 py-2 text-sm text-gray-700 focus:text-gray-900 hover:text-gray-900 focus:outline-none hover:bg-gray-100 focus:bg-gray-100">Lyrics</a>
									<a href="<%= BASE_URL %>sentence" class="flex flex-row items-center px-4 py-2 text-sm text-gray-700 focus:text-gray-900 hover:text-gray-900 focus:outline-none hover:bg-gray-100 focus:bg-gray-100">Sentence</a>
									<a href="<%= BASE_URL %>blindtest" class="flex flex-row items-center px-4 py-2 text-sm text-gray-700 focus:text-gray-900 hover:text-gray-900 focus:outline-none hover:bg-gray-100 focus:bg-gray-100">Blindtest</a>

									<hr class="my-3">

									<a href="<%= BASE_URL %>help" class="flex flex-row items-center px-4 py-2 text-sm text-gray-700 focus:text-gray-900 hover:text-gray-900 focus:outline-none hover:bg-gray-100 focus:bg-gray-100">
										<i class="fa fa-question-circle"></i>
										<span class="ml-2">Help</span>
									</a>
									<a href="https://www.spotify.com/fr/account/apps/" target="blank" class="flex flex-row items-center px-4 py-2 text-sm text-gray-700 focus:text-gray-900 hover:text-gray-900 focus:outline-none hover:bg-gray-100 focus:bg-gray-100">
										<i class="fa fa-spotify"></i>
										<span class="ml-2">Spotify Account</span>
									</a>
									<a href="<%= BASE_URL %>logout" class="flex flex-row items-center px-4 py-2 text-sm text-red-500 hover:text-red-700 hover:bg-red-100 focus:outline-none focus:text-red-700 focus:bg-red-100">
										<i class="fa fa-sign-out"></i>
										<span class="ml-2">Sign out</span>
									</a>
								</div>
							</div>
						</div>
					<% } %>
				</div>
			</div>

			<div class="flex -mr-2 lg:hidden">
				<button @click="open = !open" class="inline-flex items-center justify-center p-2 text-gray-800" x-bind:aria-label="open ? 'Close main menu' : 'Main menu'" x-bind:aria-expanded="open">
					<svg class="w-6 h-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
						<path :class="{'hidden': open, 'inline-flex': !open }" class="inline-flex" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
						<path :class="{'hidden': !open, 'inline-flex': open }" class="hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
					</svg>
				</button>
			</div>
		</div>
	</div>

	<!-- Responsive -->
	<div :class="{'block': open, 'hidden': !open}" class="hidden lg:hidden">
		<div class="container px-6 mx-auto">
			<div class="pt-2 pb-3">
				<% if(logged == false) { %>
					<a href="<%= BASE_URL %>auth" class="flex flex-row mt-4 mb-2 items-center text-gray-800"> <i class="fa fa-sign-in"></i> <span class="ml-2">Login</span> </a>
				<% } else { %>
					<a href="<%= BASE_URL %>lyrics" class="flex flex-row mt-4 mb-2 items-center text-gray-800">Lyrics</a>
					<a href="<%= BASE_URL %>sentence" class="flex flex-row mt-4 mb-2 items-center text-gray-800">Sentence</a>
					<a href="<%= BASE_URL %>blindtest" class="flex flex-row mt-4 mb-2 items-center text-gray-800">Blindtest</a>
					<hr class="my-3">
					<a href="<%= BASE_URL %>help" class="flex flex-row mt-4 mb-2 items-center text-gray-800"> <i class="fa fa-question-circle"></i> <span class="ml-2">Help</span> </a>
					<a href="https://www.spotify.com/fr/account/apps/" target="blank" class="flex flex-row mb-2 items-center text-gray-800"> <i class="fa fa-spotify"></i> <span class="ml-2">Spotify Account</span> </a>
					<a href="<%= BASE_URL %>logout" class="flex flex-row mb-2 items-center text-red-500"> <i class="fa fa-sign-out"></i> <span class="ml-2">Sign out</span> </a>
				<% } %>
			</div>
		</div>
	</div>
</nav>
