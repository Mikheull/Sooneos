<%- include('../../../../partials/header'); -%>

    <div style="height: 80vh" class="px-6 mx-auto lg:px-16 h-auto">
        <div class="mt-32 mb-16 text-center mx-auto px-4">
            <h1 class="font-semibold text-5xl text-gray-700">Hello <span class="text-indigo-600 font-bold"><%= data.user_data.display_name %></span></h1>
            <p class="mt-2 text-2xl text-gray-600">You want to send a message?</p>
            <p class="text-md text-gray-600">Do it differently and generate a playlist with your text</p>
        </div>

        <form action="" method="post">
            <div class="mx-auto mt-32 max-w-lg">
                <div class="py-2">
                    <label for="query" class="px-1 text-sm text-gray-700">Just type your sentence below</label>
                    <div class="relative mt-2">
                        <input type="search" name="query" placeholder="Write here ..." required id="query" class="appearance-none block w-full bg-grey-lighter text-grey-darker border border-red rounded py-2 px-3 focus:border-gray-600">
                        <button type="submit" class="absolute right-0 top-0 mt-3 mr-4">
                            <svg class="h-4 w-4 fill-current" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" x="0px" y="0px" viewBox="0 0 56.966 56.966" style="enable-background:new 0 0 56.966 56.966;" xml:space="preserve" width="512px" height="512px">
                                <path d="M55.146,51.887L41.588,37.786c3.486-4.144,5.396-9.358,5.396-14.786c0-12.682-10.318-23-23-23s-23,10.318-23,23  s10.318,23,23,23c4.761,0,9.298-1.436,13.177-4.162l13.661,14.208c0.571,0.593,1.339,0.92,2.162,0.92  c0.779,0,1.518-0.297,2.079-0.837C56.255,54.982,56.293,53.08,55.146,51.887z M23.984,6c9.374,0,17,7.626,17,17s-7.626,17-17,17  s-17-7.626-17-17S14.61,6,23.984,6z"/>
                            </svg>
                        </button>
                    </div>
                    <span id="char_counter" class="text-xs text-gray-500 float-right">0/180</span>
                </div>
            </div>
        </form>
    </div>

    <div class="px-6 lg:px-16 bg-gray-100 pb-6">
        <h2 class="text-gray-700 font-semibold text-3xl pt-10">Featured Playlist</h2>

        <div class="flex slick-carousel">
            <% for (let key in data.featured_playlist) { %>
                <a href="/sentence/c/<%= data.featured_playlist[key].url %>">
                    <div class="bg-white shadow-md rounded-lg overflow-hidden my-4 mr-6">
                        <img class="w-full h-64 object-cover object-center" src="<%= data.featured_playlist[key].banner %>" alt="banner of this sentence">
                        <div class="flex items-center py-3 bg-gray-800">
                            <span class="mx-3 mx-auto text-white font-semibold text-lg"><%= data.featured_playlist[key].sentence %></span>
                        </div>
                    </div>
                </a>
            <% } %>
        </div>
    </div>

<%- include('../../../../partials/footer'); -%>
